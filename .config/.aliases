
# for git dotfiles
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# for git system settings
alias config='/usr/bin/git --git-dir=$HOME/.config/system/ --work-tree=/'

# run these aliases as sudo
alias sudo='sudo '

# list aliases
alias ll='ls -lah'
alias la='ls -A'
alias l='ls -CF' 
